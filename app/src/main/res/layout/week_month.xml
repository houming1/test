<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.ruffian.library.widget.RLinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:background_normal="@color/white"
        app:corner_radius_top_left="10dp"
        app:corner_radius_top_right="10dp"
        app:corner_radius="@dimen/dp_15">

        <com.ruffian.library.widget.RRelativeLayout
            android:id="@+id/rl_week"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:background_normal="@color/theme_color20"
            app:corner_radius_top_right="@dimen/dp_15"
            app:corner_radius_top_left="@dimen/dp_15">

            <TextView
                android:id="@+id/tv_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Week"
                android:textStyle="bold"
                android:textColor="@color/theme_color"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_check_year"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:checked="true"
                android:src="@mipmap/ic_family_sel" />

        </com.ruffian.library.widget.RRelativeLayout>

        <com.ruffian.library.widget.RRelativeLayout
            android:id="@+id/rl_month"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:background_normal="@color/white">

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Month"
                android:textColor="@color/color_33"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_check_month"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:button="@null"
                android:checked="true"
                android:src="@mipmap/ic_family_sel" />

        </com.ruffian.library.widget.RRelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.ruffian.library.widget.RTextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Cancel"
                android:padding="@dimen/dp_10"
                app:background_normal="#F7F8F8"
                android:textColor="#ff868989"
                android:textSize="14sp"
                app:corner_radius_bottom_left="@dimen/dp_15"
                />
            <com.ruffian.library.widget.RTextView
                android:id="@+id/confrim"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/txt_confirm"
                android:padding="@dimen/dp_10"
                app:background_normal="@color/theme_color"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:corner_radius_bottom_right="@dimen/dp_15"
                />
        </LinearLayout>

    </com.ruffian.library.widget.RLinearLayout>
</layout>