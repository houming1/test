<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.powercore.hydrahome.ui.fragment.me.MeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/me_title_logo" />

        <ImageView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"
            android:src="@mipmap/me_logout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:background="@mipmap/me_info_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="36dp"
                    android:text="Username"
                    android:textColor="#ffffffff"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chenxiaosheng@163.com"
                    android:textColor="#ffffffff"
                    android:textSize="13sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_centerHorizontal="true">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/avatar"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:background="@color/white"
                    android:padding=".5dp"
                    android:src="@mipmap/me_defuat_header"
                    app:shapeAppearanceOverlay="@style/circleImageStyle"
                    app:strokeColor="@color/theme_color"
                    app:strokeWidth="1dp" />

                <ImageView
                    android:id="@+id/editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/me_editor"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

        </RelativeLayout>

        <com.ruffian.library.widget.RTextView
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_15"
            android:drawableStart="@mipmap/me_feedback"
            android:drawableEnd="@mipmap/icon_more"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="Feedback"
            android:textColor="#ff242b2b"
            android:textSize="14sp"
            app:background_normal="#E9EBEE"
            app:corner_radius="8dp" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:drawableStart="@mipmap/me_settings"
            android:drawableEnd="@mipmap/icon_more"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="Settings"
            android:textColor="#ff242b2b"
            android:textSize="14sp"
            app:background_normal="#E9EBEE"
            app:corner_radius="8dp" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/notifications"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:drawableStart="@mipmap/me_notifications"
            android:drawableEnd="@mipmap/icon_more"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="Notifications"
            android:textColor="#ff242b2b"
            android:textSize="14sp"
            app:background_normal="#E9EBEE"
            app:corner_radius="8dp" />

        <com.ruffian.library.widget.RTextView
            android:id="@+id/security_log"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:drawableStart="@mipmap/me_security_log"
            android:drawableEnd="@mipmap/icon_more"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:text="Security Log"
            android:textColor="#ff242b2b"
            android:textSize="14sp"
            app:background_normal="#E9EBEE"
            app:corner_radius="8dp" />
    </LinearLayout>
</layout>