<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.ruffian.library.widget.RLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:corner_radius="@dimen/dp_15"
        app:background_normal="@color/white">
        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_close"
            android:layout_gravity="right"
            android:padding="@dimen/dp_15"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assign charging profile"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ff242b2b"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:gravity="center"
            android:text="Confirm you wish to bind the selected profile to this charge point? "
            android:textColor="#ff333333"
            android:textSize="14sp"
            />
        <com.ruffian.library.widget.RTextView
            android:id="@+id/yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:padding="@dimen/dp_10"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            android:gravity="center"
            app:background_normal="@color/theme_color"
            app:corner_radius="20dp"
            />
        <com.ruffian.library.widget.RTextView
            android:id="@+id/no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No"
            android:padding="@dimen/dp_10"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/color_33"
            android:textSize="14sp"
            android:gravity="center"
            app:background_normal="@color/white"
            app:corner_radius="20dp"
            app:border_width_normal="1dp"
            app:border_color_normal="#AAAAAA"
            android:layout_marginBottom="20dp"
            />
    </com.ruffian.library.widget.RLinearLayout>
</layout>