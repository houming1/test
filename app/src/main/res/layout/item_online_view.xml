<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:clickable="true"
        android:paddingBottom="1dp">

        <com.ruffian.library.widget.RLinearLayout
            android:id="@+id/item_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:background_normal="#63EEBF"
            app:corner_radius="8dp">

            <com.ruffian.library.widget.RRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                app:background_normal="@color/white"
                app:corner_radius="8dp">

                <RelativeLayout
                    android:id="@+id/left_icon_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/online_green" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="16dp"
                        android:src="@mipmap/online_hydra_green" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/left_icon_rl"
                    android:orientation="vertical">

                    <com.ruffian.library.widget.RTextView
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_gravity="right"
                        android:layout_margin="16dp"
                        android:drawableLeft="@mipmap/online_wifi"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Online"
                        android:textColor="#ff333333"
                        android:textSize="13sp"
                        app:background_normal="#E9EBEE"
                        app:corner_radius="14dp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/online_line"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center"
                        android:text="Zodiac - UK0521112099"
                        android:textColor="#ff333333"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Type 2 ｜ 7kW ｜ Socket only"
                        android:textColor="#ff333333"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/charging_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Charging Profile (Default)"
                        android:textColor="#ff333333"
                        android:textSize="13sp" />

                    <com.ruffian.library.widget.RTextView
                        android:id="@+id/options"
                        android:layout_width="80dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="Options"
                        android:textColor="#ff333333"
                        android:textSize="12sp"
                        app:background_normal="@color/white"
                        app:border_color_normal="#AAAAAA"
                        app:border_width_normal="1dp"
                        app:corner_radius="8dp" />
                </LinearLayout>

            </com.ruffian.library.widget.RRelativeLayout>

            <TextView
                android:id="@+id/start_charging_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:drawableLeft="@mipmap/online_icon_charging"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="Start Charging Session"
                android:textColor="#ffffffff"
                android:textSize="13sp" />


        </com.ruffian.library.widget.RLinearLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent">

            <com.ruffian.library.widget.RTextView
                android:id="@+id/detele"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:drawableTop="@mipmap/icon_delete"
                android:gravity="center"
                android:paddingTop="36dp"
                android:paddingBottom="36dp"
                android:text="Detele"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                app:background_normal="#C01818"
                app:corner_radius="8dp" />
        </RelativeLayout>
    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>

</RelativeLayout>